<%# Source: http://www.w3schools.com/bootstrap/bootstrap_navbar.asp %>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">

    <div class="navbar-header"> <!-- Brand and toggle get grouped for better mobile display -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand">
        <%= link_to app_name, root_path %>
      </div>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span> <%= t :home %>
          <% end %>
        </li>
        <li class="dropdown">
          <%= link_to '#', data: {toggle: "dropdown"}, class: "dropdown-toggle" do %>
            <%= t :about_us  %>
            <span class="caret"></span>
          <% end %>

          <ul class="dropdown-menu">
            <li><%= link_to t(:about_company), '#' %></li> <!-- link to: pages_about_path -->
            <li><%= link_to t(:contacts),      '#' %></li> <!-- link to: pages_contacts_path -->
          </ul>
        </li>

        <li><%= link_to t(:help), '#' %></li>
        <li class="dropdown">
          <%= link_to '#', data: {toggle: "dropdown"}, class: "dropdown-toggle" do %>
            <%= t :dummy %>
            <span class="caret"></span>
          <% end %>

          <ul class="dropdown-menu">
            <li><%= link_to t(:dummy),  '#' %></li>
            <li><%= link_to t(:dummy),  '#' %></li>
            <li><%= link_to t(:dummy),  '#' %></li>
          </ul>
        </li>
      </ul>

      <!-- add search form -->
      <div class="col-sm-3 col-md-3">
        <form class="navbar-form" role="search">
          <div class="input-group">
            <input class="form-control" placeholder="<%= t(:search) %>" name="q" type="text">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </div>
          </div>
        </form>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <% if MULTILINGUAL %>
          <li class="dropdown">
            <%= link_to '#', data: {toggle: "dropdown"}, class: "dropdown-toggle" do %>
              <%= t :language %>
              <span class="caret"></span>
            <% end %>
            <%= language_switch_bootstrap('front') %>
        <% end %>

        <li class="dropdown">
          <%= link_to '#', data: {toggle: "dropdown"}, class: "dropdown-toggle" do %>
            <%= t :account %>
            <span class="caret"></span>
          <% end %>

          <ul class="dropdown-menu">
            <li>
              <%= link_to '#' do %>
                <span class="glyphicon glyphicon-user"></span>
                <%= t :sign_up  %>
              <% end %>
            </li>
            <li>
              <%= link_to '#' do %>
                <span class="glyphicon glyphicon-log-in"></span>
                <%= t :sign_in  %>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div>    <!-- / collapse -->
  </div>      <!-- / container-fluid -->
</nav>
