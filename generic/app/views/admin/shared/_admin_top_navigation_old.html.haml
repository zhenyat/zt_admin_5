%nav.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      / Brand and toggle get grouped for better mobile display
      %button.navbar-toggle{"data-target" => ".collapse", "data-toggle" => "collapse", :type => "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand
        = link_to app_name, admin_root_path
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to admin_root_path do
            %span.glyphicon.glyphicon-home
            = t(:admin_home)
        %li
          - if @current_user.sysadmin?
            = link_to admin_users_path do
              %span.glyphicon.glyphicon-user
              = t(:admin_users)
          - else
            = link_to edit_admin_user_path(@current_user) do
              %span.glyphicon.glyphicon-user
              = t(:profile)

        %li.dropdown
          = link_to '#', data: {toggle: "dropdown"}, class: "dropdown-toggle" do
            %span.glyphicon.glyphicon-th-list
            = t :dummy
            %span.caret
          %ul.dropdown-menu
            %li= link_to t(:dummy),  '#'
            %li= link_to t(:dummy),  '#'
            %li= link_to t(:dummy),  '#'
            %li= link_to t(:dummy),  '#'
      %ul.nav.navbar-nav.navbar-right
        - if MULTILINGUAL
          %li.dropdown
            = link_to '#', data: {toggle: "dropdown"}, class: "dropdown-toggle" do
              = t :language
              %span.caret
            = language_switch_bootstrap('admin')
        %li
          = link_to(logout_path, method: 'delete') do
            %span.glyphicon.glyphicon-log-out
            = t 'simple_form.submit.logout'