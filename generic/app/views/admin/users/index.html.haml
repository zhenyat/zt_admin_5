%h1= t User.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= User.human_attribute_name(:role)
      %th= User.human_attribute_name(:last_name)
      %th= User.human_attribute_name(:first_name)
      %th= User.human_attribute_name(:email)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @users.each do |user|
      %tr
        %td= user.role
        %td= user.last_name
        %td= user.first_name
        %td= user.email
        %td= status_mark user.status
        %td= render 'admin/shared/index_buttons', resource: user
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_user_path, class: 'btn btn-primary btn-block'
